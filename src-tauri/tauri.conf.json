{
  "productName": "Powerlifting Manager",
  "version": "0.1.0",
  "identifier": "com.powerlifting.manager",
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devUrl": "http://localhost:1420",
    "frontendDist": "../dist"
  },
  "bundle": {
    "active": true,
    "targets": ["deb", "appimage", "nsis", "dmg"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": [],
    "externalBin": [],
    "copyright": "© 2024-2025 Powerlifting Manager",
    "category": "Utility",
    "shortDescription": "Gestion de compétitions de powerlifting",
    "longDescription": "Application professionnelle pour gérer des compétitions de powerlifting conformes IPF. Inclut la gestion des athlètes, pesées, compétitions en direct, calculs de scores (IPF GL, DOTS, Wilks) et exports officiels.",
    "publisher": "Powerlifting Manager",
    "linux": {
      "deb": {
        "depends": [],
        "section": "misc"
      },
      "appimage": {
        "bundleMediaFramework": true
      }
    },
    "macOS": {
      "minimumSystemVersion": "10.15",
      "signingIdentity": null,
      "entitlements": null
    },
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": "",
      "nsis": {
        "installMode": "currentUser",
        "languages": ["English", "French"],
        "displayLanguageSelector": true
      }
    },
    "createUpdaterArtifacts": false
  },
  "app": {
    "windows": [
      {
        "title": "Powerlifting Manager",
        "width": 1920,
        "height": 1080,
        "minWidth": 1280,
        "minHeight": 800,
        "resizable": true,
        "fullscreen": false,
        "center": true,
        "maximized": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "plugins": {
    "sql": {
      "preload": ["sqlite:powerlifting.db"]
    },
    "updater": {
      "endpoints": [
        "https://github.com/mateo-brl/powerlifting-manager/releases/latest/download/latest.json"
      ],
      "pubkey": ""
    }
  }
}
